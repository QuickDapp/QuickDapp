{
  "name": "@quickdapp/base",
  "version": "3.11.3",
  "description": "Production-ready boilerplate for web apps.",
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "src/server/index.ts",
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/QuickDapp/QuickDapp.git"
  },
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "build": "bun run scripts/build.ts",
    "prod": "bun run scripts/prod.ts",
    "test": "NODE_ENV=test bun run scripts/test.ts",
    "test:e2e": "NODE_ENV=test bun run scripts/test-e2e.ts",
    "test:e2e:headed": "NODE_ENV=test bun run scripts/test-e2e.ts --headed",
    "test:e2e:ui": "NODE_ENV=test bun run scripts/test-e2e.ts --ui",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck && biome check .",
    "lint:fix": "bun run typecheck && biome check --write .",
    "format": "biome format --write .",
    "gen": "bun run scripts/gen.ts",
    "db": "bun run scripts/db.ts",
    "prepare": "husky",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^5.0.0",
    "@hiddentao/zip-json": "^1.0.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.0.0-alpha.19",
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/validator": "^13.15.10",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "tailwindcss": "^4.0.0-alpha.19",
    "typescript": "^5.6.3",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@graphql-tools/schema": "^10.0.25",
    "@hiddentao/logger": "^1.3.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@sentry/node": "^10.19.0",
    "@tanstack/react-query": "^5.62.2",
    "arctic": "^3.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "commander": "^14.0.0",
    "cron-schedule": "^5.0.4",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "elysia": "^1.3.8",
    "env-var": "^7.5.0",
    "form-data": "^4.0.5",
    "glob": "^11.0.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.1.2",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.15.1",
    "jose": "^6.0.12",
    "json-bigint-patch": "^0.0.8",
    "mailgun.js": "^12.5.0",
    "nanoid": "^5.1.6",
    "p-debounce": "^4.0.0",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.0",
    "reconnecting-websocket": "^4.4.0",
    "tailwind-merge": "^2.5.4",
    "validator": "^13.15.26"
  }
}
