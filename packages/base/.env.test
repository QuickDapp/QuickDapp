######################################################################################################
# QuickDapp Base Test Environment Configuration
######################################################################################################
#
# This file contains ONLY the overrides specific to the test environment.
# Base configuration is loaded from .env first, then these values override as needed.
#
######################################################################################################

# Test environment
NODE_ENV=test

# Test server settings (different port to avoid conflicts)
PORT=3002
API_URL=http://localhost:3002

# No worker in server when running in test mode, we will test worker separately
WORKER_COUNT=0

# Logging levels (quieter for tests)
LOG_LEVEL=warn
WORKER_LOG_LEVEL=warn

# Test database (separate from development database)
DATABASE_URL=postgresql://postgres@localhost:55433/quickdapp_test

# Test-specific encryption key (32 bytes, for testing only)
SESSION_ENCRYPTION_KEY=test_key_32_chars_long_for_testing_only!!

# External Services (Disabled for Tests)
MAILGUN_API_KEY=
MAILGUN_API_ENDPOINT=
MAILGUN_FROM_ADDRESS=
SENTRY_DSN=
SENTRY_WORKER_DSN=
SENTRY_AUTH_TOKEN=

# WebSocket config (lower limits for tests)
SOCKET_MAX_CONNECTIONS_PER_USER=5
SOCKET_MAX_TOTAL_CONNECTIONS=100

# OAuth configuration (test values)
OAUTH_GOOGLE_CLIENT_ID=test_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=test_google_client_secret
OAUTH_FACEBOOK_CLIENT_ID=test_facebook_client_id
OAUTH_FACEBOOK_CLIENT_SECRET=test_facebook_client_secret
OAUTH_GITHUB_CLIENT_ID=test_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=test_github_client_secret
OAUTH_X_CLIENT_ID=test_x_client_id
OAUTH_X_CLIENT_SECRET=test_x_client_secret
OAUTH_TIKTOK_CLIENT_KEY=test_tiktok_client_key
OAUTH_TIKTOK_CLIENT_SECRET=test_tiktok_client_secret
OAUTH_LINKEDIN_CLIENT_ID=test_linkedin_client_id
OAUTH_LINKEDIN_CLIENT_SECRET=test_linkedin_client_secret
OAUTH_CALLBACK_BASE_URL=http://localhost:3002
