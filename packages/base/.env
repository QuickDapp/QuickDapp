######################################################################################################
# QuickDapp Base Environment Configuration
######################################################################################################

# Environment
NODE_ENV=development

# App info
APP_NAME=QuickDapp
APP_VERSION=3.4.0

# Server settings
HOST=localhost
PORT=3000
WEB_ENABLED=true
API_URL=http://localhost:3000

# Worker configuration
WORKER_COUNT=1

# Logging levels
LOG_LEVEL=info
WORKER_LOG_LEVEL=info

# Database (use port 55432 for docker-compose)
DATABASE_URL=postgresql://postgres@localhost:55432/quickdapp_dev

# Security (32+ characters required)
SESSION_ENCRYPTION_KEY=development_key_32_chars_long_here!!

# WebSocket configuration
SOCKET_MAX_CONNECTIONS_PER_USER=5
SOCKET_MAX_TOTAL_CONNECTIONS=10000

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_WORKER_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILE_SESSION_SAMPLE_RATE=1.0

# External Services (optional)
MAILGUN_API_KEY=
MAILGUN_API_ENDPOINT=
MAILGUN_FROM_ADDRESS=

# OAuth Providers (optional)
OAUTH_CALLBACK_BASE_URL=http://localhost:3000
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_X_CLIENT_ID=
OAUTH_X_CLIENT_SECRET=
OAUTH_TIKTOK_CLIENT_KEY=
OAUTH_TIKTOK_CLIENT_SECRET=
OAUTH_LINKEDIN_CLIENT_ID=
OAUTH_LINKEDIN_CLIENT_SECRET=
