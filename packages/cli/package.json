{
  "name": "@quickdapp/cli",
  "version": "3.5.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "CLI tool to scaffold new QuickDapp projects",
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuickDapp/QuickDapp"
  },
  "type": "module",
  "bin": {
    "create-quickdapp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test --preload ./tests/setup.ts",
    "test:fast": "SKIP_SLOW_TESTS=true bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/node": "^24.3.0",
    "@types/tar": "^6.1.13",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "tar": "^7.0.0"
  }
}
