######################################################################################################
# QuickDapp Website Environment Configuration
######################################################################################################

# Environment
NODE_ENV=development

# App info
APP_NAME=QuickDapp Website
APP_VERSION=1.0.0

# Server settings
HOST=localhost
PORT=3000
WEB_ENABLED=true
API_URL=http://localhost:3000

# Worker configuration
WORKER_COUNT=1

# Logging levels
LOG_LEVEL=info
WORKER_LOG_LEVEL=info

# Database (use port 55432 for docker-compose)
DATABASE_URL=postgresql://postgres@localhost:55432/quickdapp_website_dev

# Security (32+ characters required)
SESSION_ENCRYPTION_KEY=development_key_32_chars_long_here!!

# WebSocket configuration
SOCKET_MAX_CONNECTIONS_PER_USER=5
SOCKET_MAX_TOTAL_CONNECTIONS=10000

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_WORKER_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILE_SESSION_SAMPLE_RATE=1.0

# External Services (optional)
MAILGUN_API_KEY=
MAILGUN_API_ENDPOINT=
MAILGUN_FROM_ADDRESS=

# GitHub API (optional, for higher rate limits)
GITHUB_AUTH_TOKEN=
