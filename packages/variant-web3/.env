######################################################################################################
# QuickDapp Web3 Variant Environment Configuration
######################################################################################################

# Environment
NODE_ENV=development

# App info
APP_NAME=QuickDapp
APP_VERSION=3.4.0

# Server settings
HOST=0.0.0.0
PORT=3000
WEB_ENABLED=true
BASE_URL=http://localhost:3000

# Worker configuration
WORKER_COUNT=1

# Logging levels
LOG_LEVEL=info
WORKER_LOG_LEVEL=info

# Database (use port 55432 for docker-compose)
DATABASE_URL=postgresql://postgres@localhost:55432/quickdapp_dev

# Security (32+ characters required)
SESSION_ENCRYPTION_KEY=development_key_32_chars_long_here!!

# WebSocket configuration
SOCKET_MAX_CONNECTIONS_PER_USER=5
SOCKET_MAX_TOTAL_CONNECTIONS=10000

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_WORKER_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILE_SESSION_SAMPLE_RATE=1.0

# External Services (optional)
MAILGUN_API_KEY=
MAILGUN_API_ENDPOINT=
MAILGUN_FROM_ADDRESS=

# OAuth Providers (optional)
OAUTH_CALLBACK_BASE_URL=http://localhost:3000
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_X_CLIENT_ID=
OAUTH_X_CLIENT_SECRET=
OAUTH_TIKTOK_CLIENT_KEY=
OAUTH_TIKTOK_CLIENT_SECRET=
OAUTH_LINKEDIN_CLIENT_ID=
OAUTH_LINKEDIN_CLIENT_SECRET=

######################################################################################################
# Web3 Configuration
######################################################################################################

# Server wallet private key (for signing transactions)
# Use a dedicated wallet, never your personal wallet
# Default: Anvil/Hardhat test account #0
WEB3_SERVER_WALLET_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Allowed origins for SIWE authentication
WEB3_ALLOWED_SIWE_ORIGINS=http://localhost:3000,http://localhost:5173

# Supported blockchain networks (comma-separated)
WEB3_SUPPORTED_CHAINS=anvil

# WalletConnect project ID (get one at https://cloud.walletconnect.com)
WEB3_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Factory contract address (pre-configured for fresh Anvil devnet deployment)
WEB3_FACTORY_CONTRACT_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# RPC endpoints for each chain
WEB3_ANVIL_RPC=http://127.0.0.1:8545
WEB3_MAINNET_RPC=
WEB3_SEPOLIA_RPC=
WEB3_BASE_RPC=
