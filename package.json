{
  "name": "@quickdapp/quickdapp",
  "version": "3.1.0",
  "description": "A highly opinionated framework that helps you quickly build and deploy Web3 dapps. Built with modern TypeScript, PostgreSQL, and comprehensive blockchain integration.",
  "author": "Ramesh Nair <ram@hiddentao.com>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "src/server/index.ts",
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/QuickDapp/QuickDapp.git"
  },
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "build": "bun run scripts/build.ts",
    "prod": "bun run scripts/prod.ts",
    "test": "bun run scripts/test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck && biome check .",
    "lint:fix": "bun run typecheck && biome check --write .",
    "format": "biome format --write .",
    "codegen": "bun run scripts/codegen.ts",
    "codegen:watch": "bun run scripts/codegen.ts --watch",
    "db": "bun run scripts/db.ts",
    "showdocs": "retype start ./docs",
    "prepare": "husky",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^5.0.0",
    "@hiddentao/zip-json": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@tailwindcss/vite": "^4.0.0-alpha.19",
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "hardhat": "^2.22.0",
    "husky": "^9.1.7",
    "retypeapp": "^3.11.0",
    "tailwindcss": "^4.0.0-alpha.19",
    "typescript": "^5.6.3",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@graphql-tools/schema": "^10.0.25",
    "@hiddentao/logger": "^1.3.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.62.2",
    "@walletconnect/ethereum-provider": "^2.21.8",
    "clsx": "^2.1.1",
    "commander": "^14.0.0",
    "cron-schedule": "^5.0.4",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "elysia": "^1.3.8",
    "env-var": "^7.5.0",
    "glob": "^11.0.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.1.2",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.15.1",
    "jose": "^6.0.12",
    "json-bigint-patch": "^0.0.8",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.0",
    "reconnecting-websocket": "^4.4.0",
    "siwe": "^3.0.0",
    "tailwind-merge": "^2.5.4",
    "viem": "^2.35.1",
    "wagmi": "^2.16.5"
  }
}
