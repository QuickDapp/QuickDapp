{
  "name": "quickdapp-v3",
  "version": "3.0.0",
  "description": "Modern dapp development platform - version 3",
  "type": "module",
  "private": true,
  "main": "src/server/index.ts",
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "bun --watch src/server/index.ts",
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "test:integration": "bun test tests/integration",
    "test:unit": "bun test tests/unit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "prepare": "husky",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "husky": "^9.1.7",
    "tsx": "^4.20.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@dotenvx/dotenvx": "^1.48.4",
    "@elysiajs/cors": "^1.3.3",
    "@hiddentao/logger": "^1.3.1",
    "archiver": "^7.0.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "elysia": "^1.3.8",
    "env-var": "^7.5.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.15.1",
    "jose": "^6.0.12",
    "postgres": "^3.4.7",
    "siwe": "^3.0.0",
    "viem": "^2.33.3"
  }
}
